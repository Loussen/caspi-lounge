{{ header }}

<section class="flat-breadcrumb">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class="breadcrumbs">
            {% for breadcrumb in breadcrumbs %}
              <li class="{% if breadcrumb.order == "last" %}trail-end {% else %}trail-item{% endif %}">
                <a href="{{ breadcrumb.href }}" title="">{{ breadcrumb.text }}</a>
                  {% if breadcrumb.order != "last" %}<span><img src="catalog/view/theme/default/images/icons/arrow-right.png" alt=""></span>{% endif %}
              </li>
            {% endfor %}
        </ul><!-- /.breacrumbs -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-breadcrumb -->



<section id="account-login" class="flat-account background">
  <div class="container">

    {% if success %}
      <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}

    <div class="row">

      {{ column_left }}

      {% if column_left and column_right %}
          {% set class = 'col-lg-7 col-md-4' %}
      {% elseif column_left or column_right %}
          {% set class = 'col-lg-9 col-md-8' %}
      {% else %}
          {% set class = 'col-lg-12 col-md-12' %}
      {% endif %}

      <div class="{{ class }}">
        {{ content_top }}

        <div class="flat-row-title">
          <h1>{{ heading_title }}</h1>
          <div class="clearfix"></div>
        </div>

        <div class="row">
          <div class="col-md-6">
            <div class="form-login">
              <div class="title">
                <div class="h3">{{ text_returning_customer }}</div>
                <p>{{ text_i_am_returning_customer }}</p>
              </div>
              <form action="{{ action }}" method="post" id="form-login" enctype="multipart/form-data">
                <div class="form-box">
                  <label for="input-email">{{ entry_email }}</label>
                  <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                </div><!-- /.form-box -->
                <div class="form-box">
                  <label for="input-password">{{ entry_password }}</label>
                  <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
                </div><!-- /.form-box -->
                {#<div class="form-box checkbox">#}
                  {#<input type="checkbox" id="remember" checked name="remember">#}
                  {#<label for="remember">Remember me</label>#}
                {#</div><!-- /.form-box -->#}
                <div class="form-box">
                  <button type="submit" class="login">{{ button_login }}</button>
                  <a href="{{ forgotten }}">{{ text_forgotten }}</a>
                </div><!-- /.form-box -->
                {% if redirect %}
                  <input type="hidden" name="redirect" value="{{ redirect }}" />
                {% endif %}
              </form><!-- /#form-login -->
            </div><!-- /.form-login -->
          </div><!-- /.col-md-6 -->
          <div class="col-md-6">
            <div class="form-register">
              <div class="title">
                <div class="h3">{{ text_new_customer }}</div>
                <p>{{ text_register }}</p>
              </div>
              <div class="form-box">

                <p>{{ text_register_account }}</p>
                <a href="{{ register }}" class="button register">{{ button_continue }}</a>

              </div><!-- /.form-box -->
            </div><!-- /.form-register -->
          </div><!-- /.col-md-6 -->
        </div><!-- /.row -->

        {{ content_bottom }}
      </div>

      {{ column_right }}
    </div>
  </div><!-- /.container -->
</section><!-- /.flat-account -->

{{ footer }}