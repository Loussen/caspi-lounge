{{ header }}

<section class="flat-breadcrumb">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class="breadcrumbs">
            {% for breadcrumb in breadcrumbs %}
              <li class="{% if breadcrumb.order == "last" %}trail-end {% else %}trail-item{% endif %}">
                <a href="{{ breadcrumb.href }}" title="">{{ breadcrumb.text }}</a>
                  {% if breadcrumb.order != "last" %}<span><img src="catalog/view/theme/default/images/icons/arrow-right.png" alt=""></span>{% endif %}
              </li>
            {% endfor %}
        </ul><!-- /.breacrumbs -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-breadcrumb -->


<section class="flat-brand style4">
  <div class="container">
    <div class="row">

      {{ column_left }}

      {% if column_left and column_right %}
          {% set class = 'col-lg-7 col-md-4' %}
      {% elseif column_left or column_right %}
          {% set class = 'col-lg-9 col-md-8' %}
      {% else %}
          {% set class = 'col-lg-12 col-md-12' %}
      {% endif %}

      <div class="{{ class }}">

        {{ content_top }}

        <div class="flat-row-title">
          <h1>{{ heading_title }}</h1>
          <div class="clearfix"></div>
        </div>

        {% if categories %}
        <ul class="brands-tablist">
          <li data-filter="*" class="active">{{ text_index }}</li>
          {% for category in categories %}
          <li data-filter="{{ category.name }}">{{ category.name }}</li>
          {% endfor %}
        </ul><!-- /.brands-tablist -->
        {% endif %}

        {% if zu_manufacturers %}
        <div class="brands-list grid">
          {% for zu_manufacturer in zu_manufacturers %}
          <div class="brands-item ipsotope {{ zu_manufacturer.key }}">
            <a href="{{ zu_manufacturer.href }}" class="box-cat" title="{{ zu_manufacturer.name }}">
              <div class="cat-name">
                {{ zu_manufacturer.name }}
              </div>
              <div class="numb-product">
                {{ zu_manufacturer.product_count }} {{ text_product }}
              </div>
            </a>
          </div><!-- /.brands-item ipsotope -->
          {% endfor %}
          <div class="clearfix"></div>
        </div><!-- /.brands-list grid -->
        {% endif %}

        {{ content_bottom }}

      </div><!-- /.col-md-12 -->

      {{ column_right }}

    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-brand style4 -->



{{ footer }}