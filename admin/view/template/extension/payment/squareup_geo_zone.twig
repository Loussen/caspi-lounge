{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">        
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-globe"></i>&nbsp;{{ text_configure_geo_zone }}</h3>
      </div>
      <div class="panel-body">
        <p>{{ text_zone_intro_1 }}</p>
        <p>{{ text_zone_intro_2 }}</p>
        <p>{{ text_zone_intro_3 }}</p>
        <ul>
          <li>{{ text_zone_usa }}</li>
          <li>{{ text_zone_canada }}</li>
          <li>{{ text_zone_eu_uk }}</li>
          <li>{{ text_zone_japan }}</li>
          {% if store_country %}
            <li>{{ text_zone_store_country }}</li>
          {% endif %}
        </ul>
        <div class="text-right">
          <a href="{{ skip }}" class="btn btn-default">{{ button_skip_no_remind }}</a>
          <a href="{{ confirm }}" class="btn btn-primary">{{ button_confirm_geo_zone }}</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}